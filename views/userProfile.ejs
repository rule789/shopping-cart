<% layout ('layout') %>
<% stylesheet('/stylesheets/css/style.css')%>


<div class="container  ">

<% if (messages.success) { %>
  <div class="alert alert-success">
    <%- messages.success %>
  </div>
<% } %>


  <div>
    <h1>訂單紀錄</h1>
    <p>Welcome to the members area</p>
  </div>

  <div class="product-tabs mt-5">
    <div class="row">
      <!-- <div class="col-3"> -->
